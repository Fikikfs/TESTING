#include <iostream>
using namespace std;

int main() {
    // Deklarasi variabel
    string nama_barang;
    double harga_barang;
    int jumlah_barang;

    // Input informasi barang
    cout << "Masukkan Nama Barang: ";
    getline(cin, nama_barang);
    
    cout << "Masukkan Harga Barang: ";
    cin >> harga_barang;
    
    cout << "Masukkan Jumlah Barang: ";
    cin >> jumlah_barang;

    // Menghitung total
    double total = harga_barang * jumlah_barang;

    // Menampilkan struk pembayaran
    cout << "\n===== Struk Pembayaran =====" << endl;
    cout << "Nama Barang: " << nama_barang << endl;
    cout << "Harga Barang: " << harga_barang << endl;
    cout << "Jumlah Barang: " << jumlah_barang << endl;
    cout << "Total Pembayaran: " << total << endl;
    cout << "=============================" << endl;

    return 0;
}
